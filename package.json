{
  "name": "eslint-config-ponko2",
  "description": "ESLint Shareable Config",
  "version": "13.0.0-beta",
  "author": "Takahito Nakano",
  "devDependencies": {
    "eslint": "~5.3.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-find-rules": "^3.3.1",
    "eslint-plugin-jest": "^21.21.0",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "^1.0.0",
    "jest": "^23.5.0",
    "lint-staged": "^7.2.2",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.2"
  },
  "files": [
    "base.js",
    "browser.js",
    "index.js",
    "legacy.js",
    "node.js",
    "rules"
  ],
  "jest": {
    "testEnvironment": "node",
    "verbose": true
  },
  "keywords": [
    "eslint",
    "eslint-config"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "main": "index.js",
  "peerDependencies": {
    "eslint": "^4.18.2",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.2",
    "prettier": "^1.14.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ponko2/eslint-config-ponko2.git"
  },
  "scripts": {
    "eslint-check": "run-p eslint-check:**",
    "eslint-check:browser": "eslint --print-config ./browser.js | eslint-config-prettier-check",
    "eslint-check:index": "eslint --print-config ./index.js | eslint-config-prettier-check",
    "eslint-check:legacy": "eslint --print-config ./legacy.js | eslint-config-prettier-check",
    "eslint-check:node": "eslint --print-config ./node.js | eslint-config-prettier-check",
    "lint": "eslint --report-unused-disable-directives .",
    "test": "jest"
  }
}
