{
  "root": true,
  "plugins": [
    "ava"
  ],
  "extends": [
    "ponko2",
    "plugin:ava/recommended"
  ],
  "rules": {
    "no-unused-vars": ["error", {
      "vars": "all",
      "args": "after-used",
      "argsIgnorePattern": "^t$"
    }],
    "id-length": ["error", {
      "min": 2,
      "properties": "never",
      "exceptions": ["$", "_", "t"]
    }]
  }
}
